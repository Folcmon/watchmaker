{% extends 'base.html.twig' %}

{% block title %}{{ "Model"|trans }}{% endblock %}

{% block body %}
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">
           <a href="{{ path('app_model_index') }}">{{ "Model"| trans }}</a> /</span>
        Nr {{ model.id }} {{ model.name }}</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-4">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ model.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Nazwa"|trans }}</th>
                                <td>{{ model.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Utworzony"|trans }}</th>
                                <td>{{ model.createdAt ? model.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Zmodyfikowany" }}</th>
                                <td>{{ model.updatedAt ? model.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{ path('app_model_edit', {'id': model.id}) }}"
                               class="btn btn-primary float-end btn-lg">{{ "Edycja"|trans }}</a>
                        </div>
                    </div>
                </div>
                <div class="card-footer border-top pt-4">
                    <div class="col-xl-12">
                        <a href="{{ path('app_model_index') }}"
                           class="btn btn-warning float-end btn-lg">{{ "Powr√≥t"|trans }}</a>
                        {{ include('model/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}