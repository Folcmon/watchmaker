{% extends 'base.html.twig' %}

{% block title %}{{ "Zadanie"|trans }}{% endblock %}

{% block body %}
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">
           <a href="{{ path('task_index') }}">{{ "Zadanie"| trans }}</a> /</span>
        Nr {{ task.id }} {{ task.title }}</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-4">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ task.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Tytuł"|trans }}</th>
                                <td>{{ task.title }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Opis zadania"|trans }}</th>
                                <td>{{ task.description }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Termin wykonania"|trans }}</th>
                                <td>{{ task.dueDate ? task.dueDate|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Czy wykonane"|trans }}</th>
                                <td>{{ task.completed ? 'Yes' : 'No' }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Utworzony"|trans }}</th>
                                <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>{{ "Zmodyfikowany" }}</th>
                                <td>{{ task.updatedAt ? task.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{ path('task_edit', {'id': task.id}) }}"
                               class="btn btn-primary float-end btn-lg">{{ "Edycja"|trans }}</a>
                        </div>
                    </div>
                </div>
                <div class="card-footer border-top pt-4">
                    <div class="col-xl-12">
                        <a href="{{ path('task_index') }}"
                           class="btn btn-warning float-end btn-lg">{{ "Powrót"|trans }}</a>
                        {{ include('task/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}