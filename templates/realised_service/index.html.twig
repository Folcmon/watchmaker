{% extends 'base.html.twig' %}

{% block title %}{{ "Usługi"|trans }}{% endblock %}

{% block leftBody %}
    {% include '/shared/leftSidebar.html.twig' %}
{% endblock %}

{% block body %}
    <h1>
        <div class="row">
            <div class="col-xl-6">
                {{ "Usługi"|trans }}
            </div>
            <div class="col-xl-6">
                <a href="{{ path('realised_service_new') }}"
                   class=" btn btn-primary btn-lg">{{ "Dodaj usługę"|trans }}</a>
            </div>
        </div>
    </h1>
    <div class="row">
        <div class="col-xl-12">
            <form method="get" class="form">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="form-group">
                            <label class="label inline">{{ "Email użytkownika lub numer telefonu"|trans }}</label>
                            <input type="text" name="search" class="form-control"
                                   value="{{ app.request.query.get('search') }}">
                        </div>
                    </div>
                    <div class="col-xl-12 text-right">
                        <div class="form-group">
                            <input type="submit" value="{{ "Szukaj "|trans }}" class="btn btn-primary">
                            <a class="btn btn-danger"
                               href="{{ url('client_index') }}">{{ "Resetowanie wyników"|trans }}</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ "Numer usługi"|trans }}</th>
            <th>{{ "Opis usługi"|trans }}</th>
            <th>{{ "Utworzony"|trans }}</th>
            <th>{{ "Zmodyfikowany"|trans }}</th>
            <th>{{ "Akcje"|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for realised_service in pagination %}
            <tr>
                <td>{{ realised_service.id }}</td>
                <td>{{ realised_service.description }}</td>
                <td>{{ realised_service.createdAt ? realised_service.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ realised_service.updatedAt ? realised_service.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('realised_service_show', {'id': realised_service.id}) }}"
                       class="btn-outline-primary btn btn-sm">{{ "Wyświetl"|trans }}</a>
                    <a href="{{ path('realised_service_edit', {'id': realised_service.id}) }}"
                       class="btn-outline-secondary btn btn-sm">{{ "Edytuj"|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ "Brak usług"|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <div class="col-lg-12">
            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
