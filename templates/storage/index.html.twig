{% extends 'base.html.twig' %}

{% block title %}{{ "Magazyn"|trans }}{% endblock %}

{% block leftBody %}
    {% include '/shared/leftSidebar.html.twig' %}
{% endblock %}

{% block body %}
    <h1>{{ "Magazyn"|trans }}</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ "Numer magazynowy"|trans }}</th>
            <th>{{ "Nazwa"|trans }}</th>
            <th>{{ "Ilość"|trans }}</th>
            <th>{{ "Ilość alarmowa"|trans }}</th>
            <th>{{ "Utworzony"|trans }}</th>
            <th>{{ "Zmodyfikowany"|trans }}</th>
            <th>{{ "Akcje"|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for storage in storages %}
            <tr>
                <td>{{ storage.id }}</td>
                <td>{{ storage.name }}</td>
                <td>{{ storage.qunatity }}</td>
                <td>{{ storage.alarmQuantity }}</td>
                <td>{{ storage.createdAt ? storage.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ storage.updatedAt ? storage.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('storage_show', {'id': storage.id}) }}" class="btn-outline-primary btn btn-sm">{{ "Wyświetl"|trans }}</a>
                    <a href="{{ path('storage_edit', {'id': storage.id}) }}" class="btn-outline-secondary btn btn-sm">{{ "Edytuj"|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{ "Brak rzeczy w magazynie"|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('storage_new') }}" class="btn btn-primary btn-lg">{{ "Dodaj przedmiot do magazynu" }}</a>
{% endblock %}
