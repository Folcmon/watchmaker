{% extends 'base.html.twig' %}

{% block title %}{{ "Usługa"|trans }}{% endblock %}

{% block leftBody %}
    {% include '/shared/leftSidebar.html.twig' %}
{% endblock %}

{% block body %}
    <h1>{{ "Usługa"|trans }}</h1>

    <table class="table table-striped ">
        <tbody>
        <tr>
            <th>{{ "Klient"|trans }}</th>
            <td>{{ order.client }}</td>
        </tr>
        <tr>
            <th>{{ "Numer usługi"|trans }}</th>
            <td>{{ order.id }}</td>
        </tr>
        <tr>
            <th>{{ "Opis"|trans }}</th>
            <td>{{ order.description }}</td>
        </tr>
        <tr>
            <th>{{ "Utworzony"|trans }}</th>
            <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>{{ "Zmodyfikowany" }}</th>
            <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>
    <div class="row mb-3">
        <div class="col-xl-12">
            {% for attachment in order.serviceAttachments %}
                <img class="img-thumbnail" src="{{ asset("uploads/service_attachment/") }}{{ attachment.getPath }}">
            {% endfor %}
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-xl-12">
            <table class="table table-bordered">
                <thead class="table-info">
                <tr>
                    <td>
                        {{ "Użyte części"|trans }}
                    </td>
                </tr>
                </thead>
                {% for usedPart in order.realisedServiceUsedItems %}
                    <tr>
                        <td>
                            Nazwa: {{ usedPart.name }} Ilość: {{ usedPart.quantity }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6">
            <a href="{{ path('order_edit', {'id': order.id}) }}"
               class="btn-primary btn btn-lg btn">{{ "Edycja"|trans }}</a>
        </div>
        <div class="col-lg-6">
            {{ include('order/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 text-right">
            <a href="{{ path('order_index') }}"
               class="btn btn-lg btn-primary">{{ "Powrót"|trans }}</a>
        </div>
    </div>
{% endblock %}
